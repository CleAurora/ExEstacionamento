@model ExEstacionamento.ViewModels.HomeViewModel
@{
    Layout = "_Layout";
}
<h1>Estacionamento TSUKAR</h1>

<form action="Home/RegistrarEntrada" method="POST"><!--configurei depois de mexer na segunda parte do controller-->
    <label for="nome">Nome</label>
    <input type="text" name ="nome">

    <label for="marca">Marca<label>
    <select name="marca" id="">
        <option value="" disabled selected>Selecione</option>
        @foreach (var item in Model.Marca)
        {
          <option value="@item.Nome">@item.Nome</option>  
        }

    </select>

    <label for="modelo">Modelo</label>
    <select name="modelo" id="">
        <option value="" disabled selected>Selecione</option>
        @foreach (var item in Model.Modelos)
        {
            <option value="@item.Nome">@item.Nome</option>
        }
    </select>

    <label for="placa">Placa</label>
    <input type="text" name="placa">

    <input type="submit" value="Registrar">
</form>